{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "array",
  "title": "The Root Schema",
  "items": {
    "$id": "#/items",
    "type": "object",
    "title": "The Items Schema",
    "required": [
      "code",
      "name",
      "category"
    ],
    "properties": {
      "code": {
        "$id": "#/items/properties/code",
        "type": "string",
        "title": "The Code Schema",
        "examples": [
          "pat_kirovogradoblenergo_ustinivskiy_rem"
        ],
        "pattern": "^([a-z0-9]+)([a-z0-9-_\\.]+)([a-z0-9]+)$"
      },
      "vendor": {
        "$id": "#/items/properties/vendor",
        "type": "string",
        "title": "The Vendor Schema",
        "examples": [
          "webmoney"
        ]
      },
      "name": {
        "$id": "#/items/properties/name",
        "type": "object",
        "title": "The Name Schema",
        "properties": {
          "en": {
            "$id": "#/items/properties/name/properties/en",
            "type": "string",
            "title": "The En Schema",
            "examples": [
              "PAT Kirovogradoblenergo Ustinivskiy REM"
            ]
          },
          "ru": {
            "$id": "#/items/properties/name/properties/en",
            "type": "string",
            "title": "The Ru Schema",
            "examples": [
              "PAT Kirovogradoblenergo Ustinivskiy REM"
            ]
          },
          "ua": {
            "$id": "#/items/properties/name/properties/en",
            "type": "string",
            "title": "The Ua Schema",
            "examples": [
              "PAT Kirovogradoblenergo Ustinivskiy REM"
            ]
          }
        }
      },
      "description": {
        "$id": "#/items/properties/description",
        "type": "object",
        "title": "The Description Schema",
        "properties": {
          "en": {
            "$id": "#/items/properties/description/properties/en",
            "type": "string",
            "title": "The En Schema",
            "examples": [
              "Paymer Check"
            ]
          },
          "ru": {
            "$id": "#/items/properties/description/properties/ru",
            "type": "string",
            "title": "The Ru Schema",
            "examples": [
              "Чек Paymer"
            ]
          },
          "ua": {
            "$id": "#/items/properties/description/properties/ua",
            "type": "string",
            "title": "The Ua Schema",
            "examples": [
              "Чек Paymer"
            ]
          }
        }
      },
      "category": {
        "$id": "#/items/properties/category",
        "type": "string",
        "title": "The Category Schema",
        "examples": [
          "internet_banking"
        ]
      },
      "countries": {
        "$id": "#/items/properties/countries",
        "type": "array",
        "title": "The Countries Schema",
        "items": {
          "$id": "#/items/properties/countries/items",
          "type": "string",
          "title": "The Items Schema",
          "examples": [
            "UA"
          ]
        }
      }
    }
  }
}